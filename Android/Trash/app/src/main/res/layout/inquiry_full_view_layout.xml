<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/inquiryFullViewImageDisplay"
                    android:layout_height="@dimen/gridItemSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/fontColorNormal"
                    android:text="Inquiry Details"
                    android:textSize="@dimen/text_size_1"
                    android:background="#000000"
                    android:padding="@dimen/border_size2"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/inquiryFullViewTitleDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/paddingSize2"
                    android:paddingTop="@dimen/border_size2"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_6" />

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/border_size2"
                    android:paddingLeft="@dimen/paddingSize2"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="#000000"
                    android:id="@+id/inquiryFullViewDescriptionDisplay"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/border_size2"
                    android:paddingLeft="@dimen/paddingSize2"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="#000000"
                    android:id="@+id/inquiryFullViewAddedUserNameDisplay"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/border_size2"
                    android:paddingLeft="@dimen/paddingSize2"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="#000000"
                    android:id="@+id/inquiryFullViewAddedDateTimeDisplay"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/fontColorNormal"
                    android:text="Status Details"
                    android:textSize="@dimen/text_size_1"
                    android:background="#000000"
                    android:padding="@dimen/border_size2"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/statusDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/paddingSize2"
                    android:paddingTop="@dimen/border_size2"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_6" />

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/border_size2"
                    android:paddingLeft="@dimen/paddingSize2"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="#000000"
                    android:id="@+id/statusNoteDisplay"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>